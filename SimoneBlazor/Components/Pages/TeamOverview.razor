@page "/TeamOverview"
@attribute [StreamRendering(true)]

<PageTitle>@Title</PageTitle>
<h1>Hold-oversigt</h1>

@if (Teams == null)
{
    <p><em>Loading...</em></p>
}

<table class="table table-light">
    <thead class="table-primary">
        <tr>
            <th></th>
            <th>Holdnavn</th>
            <th>Nummer</th>
            <th>Ugedag</th>
            <th>StartOgSlutTidspunkter</th>
            <th>Elever</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Teams)
        {
            <tr>
                <td></td>
                <td>@team.Name</td>
                <td>@team.Number</td>
                <td>@team.DayOfWeek</td>
                <td>@team.ScheduledTime</td>
                <td>
                    <a href="@($"SpecificTeamDetails/{team.Number}")" class="btn btn-outline-primary btn-sm mb-1"> Til holdet </a>
                </td>
            </tr>            
        }

    </tbody>

</table>
